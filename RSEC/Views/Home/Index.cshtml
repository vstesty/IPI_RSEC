@{
    ViewData["Title"] = "Home Page";
}


<div class="card">
    <div class="card-body">
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p>Welcome to the website of the Reporting System for Energy Consumption. See your reports</a>.</p>
        </div>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" ALIGN="center">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-20" src="~/Images/baner01.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-20" src="~/Images/baner02.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-20" src="~/Images/baner03.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body" ALIGN="center">
        <table>
            <tr>
                <td>
                    <div class="card">
                        <div class="card-body">
                            Today is @DateTime.Now.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                </td>
                <td>
                    <div class="card">
                        <div class="card-body">
                            You used @ViewBag.TotalEnergy kWh of energy
                        </div>
                    </div>
                </td>
                <td>
                    <div class="card">
                        <div class="card-body">
                            @{double sum = 0; }
                            @{sum = ViewBag.TotalEnergy * 0.000829;}
                                    You saved @sum tons of carbon dioxide
                        </div>
                    </div>
                </td>
            </tr>
        </table>
</div>
</div>